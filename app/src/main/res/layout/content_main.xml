<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.appsnipp.homedesigns.MainActivity"
    tools:showIn="@layout/app_bar_main"
    style="@style/parent.contentLayout"
    android:background="#00000000">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/viewParent.headerText"
                    android:layout_gravity="bottom"
                    android:text="Space \nExploeration" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scw"
                    android:adjustViewBounds="true" />
            </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/home_gradient_maths"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                android:onClick="go">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/sun" />

                                <TextView
                                    android:id="@+id/textViewSub1Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Sun" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientLightYellow2"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientLightOrange2">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/venus" />

                                <TextView
                                    android:id="@+id/textViewSub3Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Venus" />


                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientLightBlue"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientViolet">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/mars2" />

                                <TextView
                                    android:id="@+id/textViewSub5Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Mars" />

                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientLightYellow2"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientLightOrange2">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/sat" />

                                <TextView
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Saturn" />


                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientLightYellow2"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientViolet">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/nepw" />

                                <TextView
                                    android:id="@+id/textViewSub5Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Neptune" />

                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientLightYellow2"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientViolet">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/scw" />

                                <TextView
                                    android:id="@+id/textViewSub5Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Satellite" />

                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                android:onClick="go2"
                                gl:end_color="@color/gradientOrange"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientLightYellow">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/merg2" />

                                <TextView
                                    android:id="@+id/textViewSub2Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Mercury" />

                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientOrange3"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientLightOrange2">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/earth" />

                                <TextView
                                    android:id="@+id/textViewSub4Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Earth" />


                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientLightBlue"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientLightGreen">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:layout_width="114dp"
                                    android:layout_height="69dp"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/aa" />

                                <TextView
                                    android:id="@+id/textViewSub6Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Jupitar" />

                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">


                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientOrange3"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientLightOrange2">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/ura" />

                                <TextView
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Uranus" />


                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">


                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientLightBlue"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientLightOrange2">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/plu" />

                                <TextView
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Pluto" />


                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="15dp"
                            app:cardPreventCornerOverlap="true">

                            <net.colindodd.gradientlayout.GradientRelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="100dp"
                                android:padding="10dp"
                                gl:end_color="@color/gradientLightBlue"
                                gl:orientation="LEFT_RIGHT"
                                gl:start_color="@color/gradientLightGreen">

                                <ImageView
                                    style="@style/homeCardImage"
                                    android:layout_width="114dp"
                                    android:layout_height="69dp"
                                    android:maxHeight="90dp"
                                    android:src="@drawable/aa" />

                                <TextView
                                    android:id="@+id/textViewSub6Title"
                                    style="@style/viewParent.headerText.HomeCardTitle"
                                    android:text="Live missions" />

                            </net.colindodd.gradientlayout.GradientRelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                </LinearLayout>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
